{
	"compilerOptions": {
		"module": "ESNext",
		"target": "ESNext",
		"lib": ["ES2023"],
		"outDir": "out",
		"rootDir": "src",
		"sourceMap": true,
		"resolveJsonModule": true,
		"strict": true,
		"noUncheckedIndexedAccess": true,
		"skipDefaultLibCheck": true,
		"skipLibCheck": true,
		"moduleResolution": "bundler"
	},
	"include": ["src"],
	"exclude": ["node_modules", ".vscode-test"],
	"references": [{ "path": "./client" }]
}
