{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es2019",
		"lib": ["ES2019"],
		"outDir": "../dist",
		"rootDir": "src",
		"sourceMap": true,
		"resolveJsonModule": true,
		"strict": true,
		"noUncheckedIndexedAccess": true,
		"skipDefaultLibCheck": true,
		"skipLibCheck": true
	},
	"include": ["src"],
	"exclude": ["node_modules", ".vscode-test"]
}
